<mvc:View
    controllerName="crud.controller.PersonDetail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page
        title="Person Details"
        showNavButton="true"
        navButtonPress="onNavBack"
    >
        <content>
            <VBox class="sapUiSmallMargin">
                <Text text="{persons>ID}" />

                <Text text="{persons>Name}" />

                <Text text="{persons>Age}" />

                <Text text="{persons>Gender}" />

                <Text text="{persons>Phone}" />

                <Text
                    text="{persons>Address/Street}, {persons>Address/City}, {persons>Address/State}, {persons>Address/ZipCode}"
                />
            </VBox>
        </content>
    </Page>
</mvc:View>
