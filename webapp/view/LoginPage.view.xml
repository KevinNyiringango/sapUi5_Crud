<mvc:View
    controllerName="crud.controller.LoginPage"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Page title="Login Page" showNavButton="false">
        <content>
            <VBox class="sapUiSmallMargin" alignItems="Center" justifyContent="Center">
                <Title text="Welcome to the Login Page" level="H1" />
                <Input id="username" placeholder="Enter Username" width="300px" />
                <Input id="password" placeholder="Enter Password" type="Password" width="300px" />
                <Button text="Login" press="onLogin" width="300px" />
                <Button text="Sign Up" press="onNavigateToSignup" width="300px" />
            </VBox>
        </content>
    </Page>
</mvc:View>